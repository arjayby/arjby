---
import { Typography } from "@/components/ui/typography";

import { Github, Linkedin } from "lucide-react";
---

<section class="container max-w-5xl pt-6 md:pb-10 md:pt-20 lg:pb-20 lg:pt-40">
  <Typography variant="h1" className="py-6">Arjay Bayona</Typography>
  <Typography variant="h3" as="h2">
    Software Engineer | Frontend Developer
  </Typography>
  <Typography as="h3">
    Specialize in developing websites and applications, with over 4 years of
    experience and having worked with startups up to large companies throughout
    my career.
  </Typography>
  <div class="flex gap-4 pt-6">
    <a href="https://github.com/arjayby/" target="_blank" aria-label="GitHub">
      <Github />
    </a>
    <a
      href="https://www.linkedin.com/in/arjayby/"
      target="_blank"
      aria-label="LinkedIn"
    >
      <Linkedin />
    </a>
  </div>
</section>
